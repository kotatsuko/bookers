<h1>Editing Book</h1>

<% if @book.errors.any? %>
<div class="error">
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<%= form_for(@book) do |f| %>
<% if @book.errors[:title].any? %>
<div class="input">
	<label class="input-error">Title</label>
	<div class="input-error">
	<%= f.text_field :title %>
	</div>
</div>
<% else %>
<div class="input">
  <label>Title</label><br>
  <%= f.text_field:title %>
</div>
<% end %>

<% if @book.errors[:body].any? %>
<div class="input">
  <label class="input-error">Body</label>
  <div class="input-error">
  <%= f.text_area :body %>
  </div>
</div>
<% else %>
<div class="input">
  <label>Body</label><br>
  <%= f.text_area:body %>
</div>
<% end %>

<div class="input">
  <%= f.submit 'Update Book',class:"button" %>
</div>

<% end %>

<%= link_to "Show" ,book_path(@book.id),class:"a" %> |
<%= link_to "Back" ,books_path,class:"a" %>