<h1>Editing Book</h1>

<%= form_with model:@book,url:book_path(@book.id),method: :patch do |f| %>

<div class="input">
  <label>Title</label><br>
  <%= f.text_field:title %>
</div>
<div class="input">
  <label>Body</label><br>
  <%= f.text_area:body %>
</div>
<div class="input">
  <%= f.submit 'Update Book',class:"button" %>
</div>

<% end %>

<%= link_to "Show" ,book_path(@book.id),class:"a" %> |
<%= link_to "Back" ,books_path,class:"a" %>