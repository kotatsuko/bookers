<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th width="190" >Title</th>
      <th width="398" >Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td class="book-title,index_td"><%= book.title %></td>
      <td class="book-body,index_td"><%= book.body %></td>
      <td class="index_td">
        <%= link_to "Show" ,book_path(book.id),class:"a" %>
      </td>
      <td class="index_td">
        <%= link_to"Edit",edit_book_path(book.id),class:"a" %>
      </td>
      <td class="index_td">
        <%= link_to"Destroy",book_path(book.id),class:"a",method: :delete,"data-confirm" => "本当に削除しますか？" %>
      </td>
    </tr>
  </tbody>

  <% end %>
</table>



<h2>New Book</h2>

<%= form_for(@book) do |f| %>

<div class="input">
	<label>Title</label><br>
	<%= f.text_field :title %>
</div>
<div class="input">
  <label>Body</label><br>
  <%= f.text_area :body %>
</div>
<div class="input">
  <%= f.submit 'Create Book',class:"button" %>
</div>
<% end %>

