<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th width="190" >Title</th>
      <th width="398" >Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td class="book-title"><%= book.title %></td>
      <td class="book-body"><%= book.body %></td>
      <td>
        <a>Show</a>
      </td>
      <td>
        <a>Edit</a>
      </td>
      <td>
        <a>Destroy</a>
      </td>
    </tr>
  </tbody>

  <% end %>
</table>



<h2>New Book</h2>

<%= form_for(@book) do |f| %>

	<%= f.label :Title %><br/>
	<%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>

